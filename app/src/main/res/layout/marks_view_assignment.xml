<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">
<RelativeLayout

    android:id="@+id/relativeLayout_marks_view"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@drawable/button_bg_rectangle_solid_marks_view"
    android:layout_gravity="top"
    android:layout_marginTop="3dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="4dp"

    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="180dp"
        android:paddingStart="@dimen/album_title_padding"
        android:paddingTop="@dimen/album_title_padding"
        android:text="Uh oh! if your seeing this something has gone wrong"
        android:textColor="@color/textColor"
        style="@style/Subtitle2"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/trash_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_icon"
        android:background="@null"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="provides ability to remove and expand assignment"/>
    <TextView
        android:id="@+id/AveragePercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        style="@style/Subtitle1"
        android:textColor="@color/textColor"
        android:textSize="38sp"
        android:fontFamily="@font/gilroy_extrabold"
        android:text="-1%"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/mark_bars"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:id="@+id/BarGraph1"
            android:layout_width="32dp"
            android:layout_height="44.6dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_rectangle_bar_graph" >

        <TextView
            android:id="@+id/Kpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/textColor"
            style="@style/Body2"
            android:text="-1" />
        </RelativeLayout>
        <TextView
            android:id="@+id/K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph1"
            android:layout_marginBottom="2dp"
            android:layout_alignStart="@+id/BarGraph1"
            android:layout_alignEnd="@+id/BarGraph1"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            style="@style/Body2"
            android:text="K" />

        <RelativeLayout
            android:id="@+id/BarGraph2"
            android:layout_width="32dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/BarGraph1"
            android:background="@drawable/rounded_rectangle_bar_graph" >
            <TextView
                android:id="@+id/Tpercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/textColor"
                style="@style/Body2"
                android:text="-1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph2"
            android:layout_marginBottom="2dp"
            android:layout_alignStart="@+id/BarGraph2"
            android:layout_alignEnd="@+id/BarGraph2"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            style="@style/Body2"
            android:text="T" />

        <RelativeLayout
            android:id="@+id/BarGraph3"
            android:layout_width="32dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/BarGraph2"
            android:background="@drawable/rounded_rectangle_bar_graph" >
            <TextView
                android:id="@+id/Cpercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/textColor"
                style="@style/Body2"
                android:text="-1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph3"
            android:layout_marginBottom="2dp"
            android:layout_alignStart="@+id/BarGraph3"
            android:layout_alignEnd="@+id/BarGraph3"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            style="@style/Body2"
            android:text="C" />

        <RelativeLayout
            android:id="@+id/BarGraph4"
            android:layout_width="32dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/BarGraph3"
            android:background="@drawable/rounded_rectangle_bar_graph" >
            <TextView
                android:id="@+id/Apercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/textColor"
                style="@style/Body2"
                android:text="-1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph4"
            android:layout_marginBottom="2dp"
            android:layout_alignStart="@+id/BarGraph4"
            android:layout_alignEnd="@+id/BarGraph4"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            style="@style/Body2"
            android:text="A" />

        <RelativeLayout
            android:id="@+id/BarGraph5"
            android:layout_width="32dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/BarGraph4"
            android:background="@drawable/rounded_rectangle_bar_graph" >
            <TextView
                android:id="@+id/Opercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/textColor"
                style="@style/Body2"
                android:text="-1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph5"
            android:layout_marginBottom="2dp"
            android:layout_alignStart="@+id/BarGraph5"
            android:layout_alignEnd="@+id/BarGraph5"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            style="@style/Body2"
            android:text="O" />
    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>